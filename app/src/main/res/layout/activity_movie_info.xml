                    <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_marginTop="8dp"-->
                        <!--android:background="@drawable/rounder_border"-->
                        <!--android:layout_height="wrap_content">-->
                        <!--<android.support.v7.widget.AppCompatSpinner-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:padding="8dp"-->
                            <!--android:minHeight="32dp"-->
                            <!--android:backgroundTint="#ffffff"-->
                            <!--android:popupBackground="#333333"-->
                            <!--android:layout_gravity="center"-->
                            <!--android:id="@+id/select_server_1">-->
                        <!--</android.support.v7.widget.AppCompatSpinner>-->
                    <!--</LinearLayout>-->
                    <!--<Button-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:id="@+id/submitButtonTVSeries"-->
                        <!--android:background="@drawable/rounder_border"-->
                        <!--android:padding="0dp"-->
                        <!--android:layout_marginTop="16dp"-->
                        <!--android:text="fetch"-->
                        <!--android:layout_gravity="center"/>-->
                <!--</LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:id="@+id/download_layout">
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/episode_layout"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        style="@style/CustomTextShadow"
                        android:layout_marginTop="12dp"
                        android:text="Select Episode :-"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/rounder_border"
                        android:layout_marginTop="8dp"
                        android:visibility="visible"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatSpinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="8dp"
                            android:minHeight="32dp"
                            android:backgroundTint="#ffffff"
                            android:popupBackground="@color/colorAccent"
                            android:id="@+id/select_episode">
                        </android.support.v7.widget.AppCompatSpinner>
                    </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        style="@style/CustomTextShadow"
                        android:layout_marginTop="12dp"
                        android:text="Select Server :-"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/rounder_border"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatSpinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="8dp"
                            android:minHeight="32dp"
                            android:backgroundTint="#ffffff"
                            android:popupBackground="@color/colorAccent"
                            android:id="@+id/select_server">
                        </android.support.v7.widget.AppCompatSpinner>
                    </LinearLayout>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/submitButtonTVSeries"
                        android:background="@drawable/rounder_border"
                        android:padding="0dp"
                        android:layout_marginTop="16dp"
                        android:text="fetch"
                        android:visibility="gone"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/recycler_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateTint="#FFF"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:textSize="17sp"
                android:padding="4dp"
                android:textColor="#FFF"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                android:textStyle="bold"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:id="@+id/server_status"/>

            <android.support.v7.widget.RecyclerView
                android:background="@android:color/transparent"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:id="@+id/recycler_download">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        android:background="#90000000"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
